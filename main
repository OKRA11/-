#include <iostream>
#include <map>
#include <vector>
#include <thread>
#include <chrono>
#include <cstdlib>

using namespace std;

map<string, string> eng_names = {
    {"Крош", "Krash"},
    {"Ёжик", "Chiko"},
    {"Нюша", "Rosa"},
    {"Бараш", "Wally"},
    {"Лосяш", "Dokko"},
    {"Копатыч", "Barry"},
    {"Пин", "Pin"},
    {"Совунья", "Olga"},
    {"Карыч", "Karlin"}
};

map<string, int> ages = {
    {"Крош", 9},
    {"Ёжик", 9},
    {"Нюша", 13},
    {"Бараш", 14},
    {"Лосяш", 40},
    {"Копатыч", 45},
    {"Пин", 36},
    {"Совунья", 70},
    {"Карыч", 61}
};

int main() {
    setlocale(LC_ALL, "");
    cout << "######################" << endl;
    cout << "  Гайд по Смешарикам  " << endl;
    cout << "######################" << endl;
    cout << "Загрузка..." << endl;
    this_thread::sleep_for(chrono::seconds(2));
    cout << "Добро пожаловать!" << endl;
    cout << "1) Имя персонажа на английском" << endl;
    cout << "2) Возраст смешарика" << endl;
    cout << "3) Смешарик дня" << endl;
    cout << "4) Как появились смешарики?" << endl;
    cout << "5) Выход из программы" << endl;

    while (true) {
        string do_option;
        cout << "Выберите пункт: ";
        cin >> do_option;

        if (do_option == "5") {
            cout << "Программа завершена" << endl;
            break;
        } else if (do_option == "1") {
            string name;
            cout << "Введите имя любого смешарика на русском: ";
            cin >> name;
            try {
                cout << "Его имя: " << eng_names.at(name) << endl;
            } catch (const out_of_range&) {
                cout << "Что-то пошло не так" << endl;
            }
        } else if (do_option == "2") {
            string name;
            cout << "Введите имя любого смешарика на русском: ";
            cin >> name;
            try {
                if (name == "Нюша" || name == "Совунья") {
                    cout << "Ей " << ages.at(name) << " лет" << endl;
                } else if (name == "Карыч") {
                    cout << "Ему " << ages.at(name) << " год" << endl;
                } else {
                    cout << "Ему " << ages.at(name) << " лет" << endl;
                }
            } catch (const out_of_range&) {
                cout << "Что-то пошло не так" << endl;
            }
        } else if (do_option == "3") {
            vector<string> keys;
            for (const auto& pair : eng_names) {
                keys.push_back(pair.first);
            }
            cout << keys[rand() % keys.size()] << endl;
        } else if (do_option == "4") {
            cout << "Смешарики появились следующим образом:" << endl;
            cout << "Всё началось с коробки круглых шоколадных конфет. Один человек придумал" << endl;
            cout << "голубого кролика в виде шарика, а затем придумал ещё много других животных." << endl;
            cout << "Они должны обитать в России. После кролика Кроша появились еж Ёжик, баран" << endl;
            cout << "Бараш, свин DJ Робкий, корова Бурёнка, бельчонок Бельчун, лось Бум-Лосяш," << endl;
            cout << "гусь Гусений, медвежонок Моха, котик Коха, бульдог Буль-До, сова Бум-Со," << endl;
            cout << "ворон Бум-Ворон, Мышонок, Бабочка, Пчела Пчёл и призрак Онэ. У каждого" << endl;
            cout << "персонажа были свои интересы. Сериал решили назвать \"Сластены\". Но к" << endl;
            cout << "сожалению, некоторых персонажей удалили по разным причинам, также" << endl;
            cout << "появились новые персонажи, и некоторые даже изменились. Например, Ёжик" << endl;
            cout << "стал с иголками, а не с пружинками, и стал в очках. У Бараша появились" << endl;
            cout << "рога и он стал ходить на двух ногах, а не на четырех. Лосяш был поэтом," << endl;
            cout << "но из-за исчезновения ученого Бельчуна(его подвёл пушистый хвост, т.к." << endl;
            cout << "слишком мешал быть шариком), поэтом стал Бараш, а Лосяш - ученым. К" << endl;
            cout << "Бум-Со прибавилась шапочка, и её переименовали в Совунью. Моху с" << endl;
            cout << "Кохой удалили, потому что им не смогли придумать увлечение, хотя" << endl;
            cout << "создателям сериала Коха и Моха понравились. Образ бульдога для" << endl;
            cout << "Буль-До был слишком зарубежным. Бульдога решлили заменить на" << endl;
            cout << "медведя Копатыча. Пчёл и Бабочка пропали из-за того, что они были" << endl;
            cout << "насекомые. Гусению показали на дверь, что он был не полностью шариком," << endl;
            cout << "и его превратили в Пина(хотя пингвины не обитают в России, но Пин -" << endl;
            cout << "иностранец). С Онэ не прошёл кастинг, потому что он был призрак, а" << endl;
            cout << "сверхъестестенных существ не должно быть. Бурёнку решили оставить, но" << endl;
            cout << "её решили сделать конфликтнее. А какой облик подойдёт? Свинский! Её" << endl;
            cout << "склеили с DJ Робким и появилась Нюша. Ворона переименовали в Карыча." << endl;
            cout << "Мышонок был обычной мышью, а не шариком, и он был слишком суетлив." << endl;
            cout << "А сериал переименовали в \"Смешарики\"." << endl;
            cout << "Вот так и появился сериал." << endl;
        } else {
            cout << "Такого пункта нет" << endl;
        }
    }

    return 0;
}
